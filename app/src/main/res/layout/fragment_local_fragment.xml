<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/local_music"
        android:layout_width="match_parent"
        android:layout_height="@dimen/music_itemsize"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/local_music_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:src="@drawable/local_phone"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="本地音乐"
            android:textColor="#7D7D7D"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/local_music_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:paddingLeft="3sp"
            android:text="(99)"
            android:textColor="@android:color/darker_gray"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/recent_play"
        android:layout_width="match_parent"
        android:layout_height="@dimen/music_itemsize"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/recent_play_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:src="@drawable/recently"
          />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="最近播放"

            android:textColor="#7D7D7D"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/recent_play_num"
            android:paddingLeft="3sp"
            android:text="(99)"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/download_song_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/music_itemsize"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/download_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:src="@drawable/downloadsong"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="下载管理"

            android:textColor="#7D7D7D"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/download_song_num"
            android:paddingLeft="3sp"
            android:text="(99)"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mysinger_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/music_itemsize"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mysinger_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:src="@drawable/singer"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="我的歌手"

            android:textColor="#7D7D7D"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/mysingernum"
            android:paddingLeft="3sp"
            android:text="(99)"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="11sp" />

    </LinearLayout>



</LinearLayout>



