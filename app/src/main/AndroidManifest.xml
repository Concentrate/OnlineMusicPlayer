<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stest.neteasycloud">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/SplashTheme">

        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".nouse_now"
            android:label="@string/app_name"
            android:theme="@style/ImageTranslucentTheme" />
        <activity
            android:name=".selected_MainActivity"
            android:label="@string/title_activity_selected__main"
            android:launchMode="singleTask"
           />
        <activity android:name=".PlayTheMusic"
            />
        <activity android:name=".local_music_listActivity"></activity>
        <service android:name="com.stest.Service.PlayService"></service>
    </application>

</manifest>